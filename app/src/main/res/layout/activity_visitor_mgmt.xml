<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/ic_visitor"
        android:layout_height="@dimen/_60sdp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_visitor_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint="@string/visitor_name"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:inputType="number"
        android:hint="@string/mobile_no"
        android:maxLength="10"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_To_meet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint="@string/to_meet"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_Flate_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint="@string/flate_no"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_purpose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint="@string/purpose"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_curr_datetime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint=""
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"

        android:weightSum="5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_weight="2"
            android:src="@drawable/ic_profile" />
        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text="Take Photo" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="@dimen/_100sdp"
       android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="SAVE"
        android:textColor="@color/white_color"
        android:background="@color/title_color"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>









