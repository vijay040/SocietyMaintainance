        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="match_parent">
                <include layout="@layout/toolbar"
                    android:id="@+id/toolbar"/>
        <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80sdp"
        android:text="@string/feedback_title"
        android:textStyle="bold"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableRight="@drawable/ic_complain"
        android:textColor="@color/title_color"
        android:textSize="@dimen/_15sdp" />
                <EditText
                    android:id="@+id/edt_complaint_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@color/white_color"
                    android:hint="@string/title"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@+id/txt_heading"
                    android:paddingLeft="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="#6d6e71"
                    android:textSize="@dimen/_11sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                   android:layout_below="@+id/edt_complaint_title"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@color/view_devider" />

                <EditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_below="@+id/edt_complaint_title"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/commentbck"
                    android:gravity="top"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:hint="@string/des"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    android:textColorHint="#000" />
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                  android:visibility="gone"
                    android:indeterminateDrawable="@drawable/progressbar"

                    />
                <EditText
                    android:id="@+id/edt_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@color/white_color"
                    android:hint="@string/current_date"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_below="@+id/edt_description"
                    android:paddingLeft="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="#6d6e71"
                    android:textSize="@dimen/_11sdp" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_description"
                    android:layout_marginTop="@dimen/_50sdp"
                 android:layout_centerInParent="true"
                    android:background="@drawable/btn_back"
                    android:text="@string/submit"
                    android:textColor="@color/white_color" />
        </RelativeLayout>