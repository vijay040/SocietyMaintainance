<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_home"
        android:id="@+id/toolbar_home"/>
    <android.support.v4.widget.DrawerLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer"
        android:layout_below="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gh">
           </FrameLayout>
           <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#408ad4"
            android:fitsSystemWindows="true">
                 <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                     android:weightSum="2"
                 android:orientation="vertical">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:layout_weight="1"
                         android:background="@drawable/header"
                         android:layout_height="@dimen/_100sdp">
                    <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_userlogin" />
                         <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anuradha Singh"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="true"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:textStyle="bold|italic"  />
                            <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:text="anu@gmail.com"
                        android:layout_gravity="center"
                        android:gravity="center" />
                            <TextView
                        android:id="@+id/txtSociety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Supertech"  />
                            <TextView
                        android:id="@+id/txtFlateNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Flate No. 108"  />
                     </LinearLayout>
                     <View
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_1sdp"
                         android:background="@color/text_hint_color" />

                     <ListView
                         android:id="@+id/listItem"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>




                    </LinearLayout>
                    </android.support.design.widget.NavigationView>
                    </android.support.v4.widget.DrawerLayout>
                    </RelativeLayout>