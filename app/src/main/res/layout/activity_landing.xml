<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_home"
        android:id="@+id/toolbar_home"/>
    <android.support.v4.widget.DrawerLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer"
        android:layout_below="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gh">
           </FrameLayout>
           <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#408ad4"
            android:fitsSystemWindows="true">
                 <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                     android:weightSum="2"
                 android:orientation="vertical">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:layout_weight="1"
                         android:background="@drawable/header"
                         android:layout_height="@dimen/_100sdp">
                    <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_userlogin" />
                         <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anuradha Singh"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="true"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:textStyle="bold|italic"  />
                            <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:text="anu@gmail.com"
                        android:layout_gravity="center"
                        android:gravity="center" />
                            <TextView
                        android:id="@+id/txtSociety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Supertech"  />
                            <TextView
                        android:id="@+id/txtFlateNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Flate No. 108"  />
                     </LinearLayout>
                     <View
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_1sdp"
                         android:background="@color/text_hint_color" />
                     <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/txtRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_request"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Make Request"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtComplaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_complain"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/complaint"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtParking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_parking"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/parking"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_notice"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Notice"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtMeeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_meeting"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Meetings"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_billing"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/billing"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                     <TextView
                         android:id="@+id/txtAddVendor"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/_20sdp"
                         android:layout_marginTop="@dimen/_10sdp"
                         android:drawableLeft="@drawable/ic_addvendor"
                         android:drawablePadding="@dimen/_5sdp"
                         android:text="Add Vendor"
                         android:textColor="@color/white_color"
                         android:textSize="@dimen/_14sdp"
                         android:textStyle="bold" />
                     <TextView
                    android:id="@+id/txtlogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/logout"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/logout"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
               </LinearLayout>
                    </LinearLayout>
                    </android.support.design.widget.NavigationView>
                    </android.support.v4.widget.DrawerLayout>
                    </RelativeLayout>